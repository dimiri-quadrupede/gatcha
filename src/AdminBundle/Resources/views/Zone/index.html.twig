{% extends 'AppBundle::base.html.twig' %}

 {% block menu %} {% include 'AdminBundle:Default:menu.html.twig' %} {% endblock %}

{% block title %}Zones list{% endblock %}    
 
{% block body %}
   

    <table>
        <thead>
            <tr>
                <th>{{ "entity.label.name"|trans }}</th>
                <th>{{ "entity.label.id"|trans }}</th>
                <th>{{ "th.label.action"|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for zone in zones %}
            <tr>
                <td><a href="{{ path('zone_show', { 'id': zone.id }) }}">{{ zone.nom }}</a></td>
                <td>{{ zone.id }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('zone_show', { 'id': zone.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('zone_edit', { 'id': zone.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
 {% endblock %}    
{% block aside %}          

    <ul>
        <li>
            <a href="{{ path('zone_new') }}">Create a new zone</a>
        </li>
    </ul>
{% endblock %}
