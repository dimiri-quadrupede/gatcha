{% extends 'AppBundle::base.html.twig' %}

 {% block menu %} {% include 'AdminBundle:Default:menu.html.twig' %} {% endblock %}

  {% block title %}{{ personnage.id is not null ? "title.entity.edit"|trans({'%content%': personnage.name }) : "title.entity.add"|trans({'%entity%': 'Personnage' }) }} {% endblock %}  

{% block body %}
    {{ form_start(form) }}
        {{ form_widget(form) }}
        <input type="submit" value="Edit" />
    {{ form_end(form) }}
 {% endblock %} 
 
{% block aside %}          

    {% if personnage.id is not null and personnage.icon is not null %}
        <img src="/uploads/icon/{{ personnage.icon.name }}"/>
    {% endif %}
    <ul>
        <li>
            <a href="{{ path('personnage_index') }}">{{ "link.list.back"|trans }}</a>
        </li>
        {% if delete_form is not null %}
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
        {% endif %}
    </ul>
{% endblock %}
