					<a href="{{ path('game_personnage_show', { 'slug' : personnage.slug } ) }}">{{ personnage.name }}</a><br/>
				</div>
            
        {% endfor %}   
						</div>
				</th>
			</tr>
			
            <tr>
                <td><a href="{{ path('invocation_portail_mono', { 'id': portail.id }) }}">MONO</a></td>
